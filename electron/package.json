{
  "name": "simplecms-filemanager-electron",
  "version": "0.0.1",
  "description": "SimpleCMS File Manager - Desktop Application",
  "author": {
    "name": "SimpleCMS Team",
    "email": "test@lufy.org"
  },
  "homepage": "https://github.com/simplecms/filemanager",
  "private": true,
  "main": "main.cjs",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "electron": "electron .",
    "dev": "concurrently \"cd ../frontend && npm run dev:electron\" \"wait-on http://localhost:3002 && electron .\"",
    "build": "npm run build:frontend && electron-builder",
    "build:frontend": "cd ../frontend && npm install && npm run build:electron",
    "build:win": "npm run build:frontend && electron-builder --win",
    "build:mac": "npm run build:frontend && electron-builder --mac", 
    "build:linux": "npm run build:frontend && electron-builder --linux",
    "dist": "npm run build:frontend && electron-builder --publish=never",
    "pack": "npm run build:frontend && electron-builder --dir",
    "setup": "./setup-electron.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "vite-plugin-electron": "^0.29.0",
    "wait-on": "^7.2.0"
  }
}
