{
  "name": "simplecms-filemanager",
  "version": "0.0.1",
  "description": "SimpleCMS File Manager - A modern file management application",
  "author": {
    "name": "SimpleCMS Team",
    "email": "test@lufy.org"
  },
  "homepage": "https://github.com/simplecms/filemanager",
  "private": true,
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "build:web": "./build-web.sh",
    "build:electron": "./build-electron.sh",
    "electron:dev": "./run-electron-dev.sh",
    "install:web": "cd frontend && npm install",
    "install:electron": "cd electron && npm install",
    "install:all": "npm run install:web && npm run install:electron",
    "clean": "rm -rf frontend/dist frontend/node_modules electron/node_modules electron/release",
    "lint": "cd frontend && npm run lint",
    "format": "cd frontend && npm run format"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  }
}
